<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view"
    android:layout_margin="10dp"
    card_view:cardBackgroundColor="#c8f7dab9"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="4dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&#8942;"
            android:id="@+id/tvOption"
            android:textAppearance="?android:textAppearanceLarge"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:paddingTop="8dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="#000000"
            android:textStyle="normal|bold" />

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical"
            android:id="@+id/linearLayout">

            <TextView
                android:text="台北市"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvCountry"
                android:textSize="34sp"
                android:layout_marginBottom="8dp"
                android:textColor="#00043b" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    card_view:srcCompat="@drawable/face04"
                    android:id="@+id/imgFace" />

                <TextView
                    android:text="空氣指標"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView"
                    android:textSize="20sp"
                    android:paddingLeft="5dp"
                    android:textColor="#000000"
                    android:paddingTop="4dp" />
            </TableRow>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvO3"
                android:text="O3臭氧濃度: 100ppb"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:text="建議:出門注意"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvAqiDes"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp" />


        </LinearLayout>

        <ImageView
            card_view:srcCompat="@drawable/build04"
            android:id="@+id/imageView5"
            android:layout_height="100dp"
            android:layout_width="90dp"
            android:layout_below="@+id/tvOption"
            android:layout_toRightOf="@+id/linearLayout"
            android:layout_toEndOf="@+id/linearLayout" />

    </RelativeLayout>

</android.support.v7.widget.CardView>