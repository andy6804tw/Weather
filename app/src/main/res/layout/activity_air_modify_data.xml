<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_modify"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingTop="25dp"
tools:context="com.lk.weather.AirActivity.AirModifyData"
android:orientation="vertical"
android:background="@drawable/bg08">

<TableRow
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/input_modify"
    android:layout_centerHorizontal="true"
    android:id="@+id/table1"
    android:padding="10dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_marginEnd="30dp"
    android:layout_marginStart="30dp"
    android:layout_marginTop="15dp">

    <TextView
        android:text="日期"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/tvDate" />
</TableRow>
<TableRow
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/table2"
    android:background="@drawable/input_modify"
    android:layout_centerHorizontal="true"
    android:padding="10dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_marginEnd="30dp"
    android:layout_marginStart="30dp"
    android:layout_marginTop="15dp"
    android:layout_below="@+id/table1">

    <TextView
        android:text="AQI空氣指標"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edtAqi" />
</TableRow>

<TableRow
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/table3"
    android:layout_below="@+id/table2"
    android:background="@drawable/input_modify"
    android:layout_centerHorizontal="true"
    android:padding="10dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_marginEnd="30dp"
    android:layout_marginStart="30dp"
    android:layout_marginTop="15dp">

    <TextView
        android:text="O3臭氧濃度"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edtO3" />
</TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/table4"
        android:layout_below="@+id/table3"
        android:background="@drawable/input_modify"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp">

        <TextView
            android:text="PM2.5細懸浮微粒"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtPm25" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/table5"
        android:layout_below="@+id/table4"
        android:background="@drawable/input_modify"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp">

        <TextView
            android:text="PM10懸浮微粒"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtPm10" />
    </TableRow>

<TableRow
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/table7"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">

    <Button
        android:text="修改"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnModify"
        android:layout_weight="1"
        android:onClick="modify"
        android:textSize="15dp"
        android:background="#333333"
        android:textColor="#ffffff"/>

</TableRow>

</RelativeLayout>

