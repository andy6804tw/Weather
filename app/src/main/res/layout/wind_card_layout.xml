<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="#f0213129"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="4dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp" >

        <com.github.ahmadnemati.wind.WindView
            android:id="@+id/windview"
            android:layout_width="match_parent"
            android:layout_height="106dp"
            app:barometerTickSpacing="9dp"
            app:bigPoleX="38dp"
            app:labelFontSize="12sp"
            app:numericFontSize="25sp"
            app:poleBottomY="98dp"
            app:pressureLineY="73dp"
            app:pressureTextX="12dp"
            app:pressureTextY="4dp"
            app:smallPoleX="75dp"
            app:windTextX="10dp"
            app:windTextY="29dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="51dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&#8942;"
            android:id="@+id/tvOption"
            android:textAppearance="?android:textAppearanceLarge"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="3dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="@android:color/white"/>

        <TextView
            android:text="台北市"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvCountry"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:layout_alignBaseline="@+id/tvOption"
            android:layout_alignBottom="@+id/tvOption"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="2017/01/07"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDate"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:paddingLeft="8dp"
            android:layout_below="@+id/tvCountry"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingTop="2dp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>